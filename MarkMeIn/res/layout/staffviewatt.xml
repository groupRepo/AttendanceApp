<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:gravity="center"
    android:orientation="vertical"
    android:padding="25dp" >

    <Button
        android:id="@+id/btModuleRecords"
        android:layout_width="275dp"
        android:layout_height="wrap_content"
        android:text="Module Records" />

    <Button
        android:id="@+id/btLectureRecords"
        android:layout_width="275dp"
        android:layout_height="wrap_content"
        android:text="Lecture Records" />

    <Button
        android:id="@+id/btLabRecords"
        android:layout_width="275dp"
        android:layout_height="wrap_content"
        android:text="Lab Records" />

    <Button
        android:id="@+id/btStudentRecords"
        android:layout_width="275dp"
        android:layout_height="wrap_content"
        android:text="Student Records" />

</LinearLayout>